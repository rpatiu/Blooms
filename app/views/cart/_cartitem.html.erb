<div class="block ml-5">
        <% @cart.each do |flower| %>
        <div class="box p-5">
          <article class="columns is-desktop p-2">
            <div class="column">
                <%= image_tag(flower.image, alt: flower.name, style: "width: 200px")%>
            </div>
            <div class="column">
              <div class="content m-1">
                <h2 class="title is-4" ><%= flower.name %></h2>

                <% if flower.sale_price.present? %>
                  <h3 class="subtitle is-6">$<%= flower.sale_price%></h3>
                  <h3 class="subtitle is-5"><strike>$<%= flower.price%></strike></h3>
                <% else %>
                  <h3 class="subtitle is-5">$<%= flower.price%></h3>
                <% end %>
                <br>
              </div>
              <div class="">
                    <div class="is-flex">
                    <%= form_with url: cart_path(flower.id), method: :put do %>
                      <% quantity = session[:shopping_cart]["#{flower.id}"] %>
                      Quantity: <%= number_field_tag(:quantity, quantity, class: " input m-1") %>
                      <%= hidden_field_tag(:id, flower.id) %>
                      <%= button_tag 'Update', class: "button is-link m-1", style: "width: 100%" %>
                  <% end %>
                </div>

                                      <div class="card">

                                        <% if cart.include?(flower) %>
                                          <%= button_to cart_path(flower.id), class: "button is-danger is-responsive m-1", style: "width: 100%", method: :delete do %>
                                            Remove
                                          <% end %>
                                        <% else %>
                                          <%= form_with url: cart_index_path, method: :post do %>
                                            <%= hidden_field_tag(:id, flower.id) %>
                                            <%= button_tag 'Add to Cart', class: "button is-info is-responsive m-1", style: "width: 100%" %>
                                          <% end %>

                                        <% end %>
                                      </div>

              </div>
            </div>
          </article>
        </div>

        <% end %>




</div>

